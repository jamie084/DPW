<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="project.deepwateroiltools_001.Registration"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/background_welcomeScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/inpField_email_reg"
        style="@style/App_EditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/inpField_pw_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <EditText
        android:id="@+id/inpField_pw_reg"
        style="@style/App_EditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_above="@+id/inpField_pw_reg2"
        android:layout_alignStart="@+id/inpField_email_reg"
        android:layout_marginBottom="14dp" />

    <EditText
        android:id="@+id/inpField_pw_reg2"
        style="@style/App_EditTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="re-type password"
        android:inputType="textPassword"
        android:layout_above="@+id/btn_next_reg"
        android:layout_alignStart="@+id/inpField_pw_reg"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/btn_next_reg"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="@string/btn_next_reg" />

    <TextView
        android:id="@+id/lbl_info_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inpField_email_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="Registration"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/lbl_warning_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inpField_email_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/inpField_email_reg"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/inpField_email_reg"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/false_img" />

    <ImageView
        android:id="@+id/img_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/img_email"
        android:layout_below="@+id/inpField_email_reg"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/false_img" />

    <ImageView
        android:id="@+id/img_pwRe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/img_pw"
        android:layout_below="@+id/inpField_pw_reg"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/false_img" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/lbl_info_reg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:src="@drawable/logo" />



</RelativeLayout>
