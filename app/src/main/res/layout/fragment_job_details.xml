<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.deepwateroiltools_001.HomeScreen">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/crossfade_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/btn_back"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="57dp"
            android:text="Go back"
            android:textColor="#FFFFFF"
            tools:text="Go back" />

        <Button
            android:id="@+id/btn_exportPDF"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/scrollView2"
            android:layout_marginEnd="28dp"
            android:text="Export to pdf" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_above="@+id/btn_back"
            android:layout_alignParentStart="true"
            android:background="@drawable/backwithborder"
            android:id="@+id/scrollView2">

            <TextView
                android:id="@+id/crossfade_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:gravity="top|center"
                android:textSize="16sp" />
        </ScrollView>

        <Button
            android:id="@+id/btn_load"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scrollView2"
            android:layout_toStartOf="@+id/btn_exportPDF"
            android:text="Load"
            tools:text="Load" />

    </RelativeLayout>
</RelativeLayout>
